<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                {{#requires_content_prompt}}
                    <h3>{{#str}}paste_text, local_cria{{/str}}</h3>
                    <textarea id="cria-test-input" style="width: 100%;" rows="20"></textarea>
                {{/requires_content_prompt}}
                {{^requires_content_prompt}}
                    <input type="hidden" id="cria-test-input" value="">
                {{/requires_content_prompt}}
                <div id="cria-bot-container">
                    <div id="cria-input-container">
                        <input type="hidden" id="cria-chat-id" value="{{chat_id}}">
                        <input type="hidden" id="default-user-prompt" value="{{user_prompt}}">
                        {{#requires_user_prompt}}
                            <textarea id="user-prompt" class="form-control mt-2 mb-2"></textarea>
                        {{/requires_user_prompt}}
                        {{^requires_user_prompt}}
                            <input type="hidden" id="user-prompt">
                        {{/requires_user_prompt}}
                        <button
                                id="submit-question"
                                class="btn btn-primary mt-2"
                                data-bot_id="{{bot_id}}"
                        >{{#str}}submit, local_cria{{/str}}
                        </button>
                        <div id="starting-process" class="progress mt-2"
                             style="display:none; height: 30px; width: 100%;">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-info"
                                 role="progressbar"
                                 aria-valuenow="100"
                                 aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                Give me a moment while I work on that!
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        {{> local_cria/test_bot_statistics}}
        <div class="card mt-3">
            <div class="card-header">
                <div class="row">
                    <div class="col">
                        <h3>{{#str}}response, local_cria{{/str}}</h3>
                    </div>
                    <div class="col">
                        <div style="font-size: 0.8em;" class="float-right">{{#str}}retrieved_from, local_cria{{/str}}:</div>
                        <div id="cria-file-name" style="font-size: 0.8em;" class="float-right"></div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div id="cria-conversation">
                </div>
            </div>
        </div>
    </div>
</div>