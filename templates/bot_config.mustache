<div class="row mt-2">
    <div class="col">
        <div class="card">
            {{#is_siteadmin}}
            <h3 class="card-header">
                    <a href="edit_bot.php" class="btn btn-outline-primary float-right">
                        {{#str}}add_bot, local_cria{{/str}}
                    </a>
            </h3>
            {{/is_siteadmin}}
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>{{#str}}name, local_cria{{/str}}</th>
                        <th>{{#str}}bot_type, local_cria{{/str}}</th>
                        <th>{{#str}}actions, local_cria{{/str}}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#bots}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{type_name}}</td>
                            <td>
                                {{#local/cria:edit_bots}}
                                    <a href="edit_bot.php?bot_id={{id}}" class="btn btn-outline-primary">
                                    {{#str}}edit, local_cria{{/str}}
                                    </a>
                                {{/local/cria:edit_bots}}
                                {{#local/cria:edit_bot_content}}
                                    {{#use_bot_server}}
                                        <a href="content.php?bot_id={{id}}" class="btn btn-outline-primary">
                                        {{#str}}content, local_cria{{/str}}
                                        </a>
                                    {{/use_bot_server}}
                                {{/local/cria:edit_bot_content}}
                                {{#local/cria:bot_permissions}}
                                        <a href="bot_permissions.php?bot_id={{id}}" class="btn btn-outline-primary">
                                        {{#str}}permissions, local_cria{{/str}}
                                        </a>
                                {{/local/cria:bot_permissions}}
                                {{#local/cria:test_bots}}
                                    <a href="test_bot.php?bot_id={{id}}" class="btn btn-outline-primary">
                                    {{#str}}test_bot, local_cria{{/str}}
                                    </a>
                                {{/local/cria:test_bots}}
                                {{#local/cria:view_bot_logs}}
                                    <a href="bot_logs.php?bot_id={{id}}" class="btn btn-outline-primary">
                                    {{#str}}logs, local_cria{{/str}}
                                    </a>
                                {{/local/cria:view_bot_logs}}
                                {{#local/cria:delete_bots}}
                                    {{^system_reserved}}
                                        <button class="btn btn-outline-danger delete-bot" data-id="{{id}}">
                                            {{#str}}delete, local_cria{{/str}}
                                        </button>
                                    {{/system_reserved}}
                                {{/local/cria:delete_bots}}
                                {{#local/cria:share_bots}}
                                    {{#use_bot_server}}
                                    <button
                                            class="btn btn-outline-primary share-bot"
                                            data-id="{{id}}"
                                            data-theme="{{theme_color}}"
                                            data-share='{{criachat}}'>
                                        {{#str}}share, local_cria{{/str}}
                                    </button>
                                    {{/use_bot_server}}
                                {{/local/cria:share_bots}}
                            </td>
                        </tr>
                    {{/bots}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Sahre Modal -->
<div class="modal fade" id="shareModal" tabindex="-1" aria-labelledby="shareModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="shareModalLabel">{{#str}}embed_code, local_cria{{/str}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info">
                    {{#str}}embed_code_help, local_cria{{/str}}
                </div>
                <div id="share-code" class="alert alert-secondary border border-secondary">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

