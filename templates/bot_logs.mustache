<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <a href="bot_config.php" class="btn btn-outline-primary">
                    {{#str}}bots, local_cria{{/str}}
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-2">
    <div class="col">
        <div class="card">
            <div class="row">
                <div class="col-12 card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <h3>
                                {{#str}}logs_for, local_cria{{/str}} {{name}}
                            </h3>
                        </div>
                        <div class="col-md-6">
                            <button type="button" class="btn btn-success">
                                {{#str}}total_usage_cost, local_cria{{/str}}:
                                <span class="badge badge-success">
                                    {{total_usage_cost}}
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table id="bot_logs" class="table table-striped table-responsive">
                    <thead>
                    <tr>
                        <th>{{#str}}userid, local_cria{{/str}}</th>
                        <th>{{#str}}firstname{{/str}}</th>
                        <th>{{#str}}lastname{{/str}}</th>
                        <th>{{#str}}prompt, local_cria{{/str}}</th>
                        <th>{{#str}}response, local_cria{{/str}}</th>
                        <th>{{#str}}index_context, local_cria{{/str}}</th>
                        <th>{{#str}}prompt_tokens, local_cria{{/str}}</th>
                        <th>{{#str}}completion_tokens, local_cria{{/str}}</th>
                        <th>{{#str}}total_tokens, local_cria{{/str}}</th>
                        <th>{{#str}}cost, local_cria{{/str}}</th>
                        <th>{{#str}}ip, local_cria{{/str}}</th>
                        <th>{{#str}}timecreated, local_cria{{/str}}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#logs}}
                        <tr>
                            <td>{{{userid}}}</td>
                            <td>{{{firstname}}}</td>
                            <td>{{{lastname}}}</td>
                            <td>{{{prompt}}}</td>
                            <td>{{{message}}}</td>
                            <td>{{{index_context}}}</td>
                            <td>{{{prompt_tokens}}}</td>
                            <td>{{{completion_tokens}}}</td>
                            <td>{{{total_tokens}}}</td>
                            <td>${{{cost}}}</td>
                            <td>{{ip}}</td>
                            <td>{{timecreated}}</td>
                        </tr>
                    {{/logs}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>