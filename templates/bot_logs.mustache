{{> local_cria/bot_nav_buttons}}

<div class="row mt-2">
    <div class="col">
        <div class="card">
            <div class="row">
                <div class="col-12 card-header">
                    <div class="row">
                        <div class="col">
                            <h4>
                                {{#str}}logs_for, local_cria{{/str}} {{name}}
                            </h4>
                        </div>
                        <div class="col">
                            <button type="button" class="btn btn-success float-right">
                                {{#str}}total_usage_cost, local_cria{{/str}}:
                                <span class="badge badge-success">
                                    {{total_usage_cost}}
                                </span>
                            </button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <h4>Filters</h4>
                            <div class="form-group">
                                <input type="hidden" id="bot_id" value="{{bot_id}}">
                                <label for="cria-date-picker">{{#str}}date_range, local_cria{{/str}}</label>
                                <input type="text" id="cria-date-picker" data-bot_id="{{bot_id}}" class="form-control"
                                       value="{{date_range}}">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="bot-logs-table" class="table table-striped table-responsive">
                        <thead>
                        <tr>
                            <th>{{#str}}userid, local_cria{{/str}}</th>
                            <th>{{#str}}firstname{{/str}}</th>
                            <th>{{#str}}lastname{{/str}}</th>
                            <th>{{#str}}prompt, local_cria{{/str}}</th>
                            <th>{{#str}}response, local_cria{{/str}}</th>
                            <th>{{#str}}index_context, local_cria{{/str}}</th>
                            <th>{{#str}}prompt_tokens, local_cria{{/str}}</th>
                            <th>{{#str}}completion_tokens, local_cria{{/str}}</th>
                            <th>{{#str}}total_tokens, local_cria{{/str}}</th>
                            <th>{{#str}}cost, local_cria{{/str}}</th>
                            <th>{{#str}}ip, local_cria{{/str}}</th>
                            <th>{{#str}}timecreated, local_cria{{/str}}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#logs}}
                            <tr>
                                <td>{{{userid}}}</td>
                                <td>{{{firstname}}}</td>
                                <td>{{{lastname}}}</td>
                                <td>{{prompt}}</td>
                                <td>{{{message}}}</td>
                                <td>{{index_context}}</td>
                                <td>{{{prompt_tokens}}}</td>
                                <td>{{{completion_tokens}}}</td>
                                <td>{{{total_tokens}}}</td>
                                <td>${{{cost}}}</td>
                                <td>{{ip}}</td>
                                <td>{{timecreated}}</td>
                            </tr>
                        {{/logs}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>