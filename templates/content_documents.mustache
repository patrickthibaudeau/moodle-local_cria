<div class="card">
    <h3 class="card-header">
        <div class="col">
            <h3 class="float-left">{{#str}}documents, local_cria{{/str}}</h3>
        </div>
        <div class="col">
            <div class="btn-group float-right" role="group">

                <button type="button" class="btn btn-link btn-lg dropdown-toggle" title="{{#str}}add, local_cria{{/str}}" data-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-plus-circle"></i>
                </button>
                <div class="dropdown-menu">
                    <a
                            class="dropdown-item"
                            href="edit_content.php?intent_id={{id}}"
                            title="{{#str}}upload_files, local_cria{{/str}}">{{#str}}upload_files, local_cria{{/str}}</a>
                    <a
                            class="dropdown-item"
                            href="#" data-toggle="modal"
                            data-target="#urlModal"
                            title="{{#str}}web_pages, local_cria{{/str}}">{{#str}}web_pages, local_cria{{/str}}</a>
                </div>
                <button type="button"
                        id="criaDeleteSelectedDocuments"
                        class="btn btn-link btn-lg  text-danger"
                        data-intent_id="{{id}}"
                        title="{{#str}}delete_selected, local_cria{{/str}}"
                >
                    <i class="bi bi-x-circle"></i>
                </button>
            </div>
            </a>
            <button id="cria-publish-all-files" class="btn btn-link btn-lg float-right mr-1"
                    data-intent_id="{{id}}"
                    title="{{#str}}publish_all, local_cria{{/str}}">
                <i id="icon-document-publish-all" class="bi bi-cloud-upload"></i>
                <i id="icon-document-publish-all-spinner" class="bi bi-arrow-repeat icn-spinner" style="display: none;"></i>
            </button>
        </div>
    </h3>
    <div class="card-body">
        <table id="cria-documents-table" class="table table-striped">
            <thead>
            <tr>
                <th>
                    <input type="checkbox" id="cria-document-select-all">
                </th>
                <th>{{#str}}name, local_cria{{/str}}</th>
                <th>{{#str}}actions, local_cria{{/str}}</th>
            </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="urlModal" tabindex="-1" aria-labelledby="urlModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="urlModalLabel">{{#str}}web_pages, local_cria{{/str}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info" role="alert">
                    {{#str}}web_page_help, local_cria{{/str}}
                </div>
                <div class="field-group">
                    <label for="url">URL</label>
                    <textarea
                            id="local-cria-urls"
                            name="local-cria-urls"
                            class="form-control"
                            placeholder="https://example.com"
                            rows="10"
                    ></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{#str}}close, local_cria{{/str}}</button>
                <button type="button" id="btn-cria-save-urls" data-intent_id="{{id}}" class="btn btn-primary">{{#str}}save, local_cria{{/str}}</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteDocumentModal" tabindex="-1" aria-labelledby="deleteDocumentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteDocumentModalLabel">{{#str}}delete, local_cria{{/str}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{#str}}delete_document_confirmation, local_cria{{/str}}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{#str}}close, local_cria{{/str}}</button>
                <button type="button" id="btn-cria-delete-document" data-intent_id="{{id}}" class="btn btn-primary">{{#str}}delete, local_cria{{/str}}</button>
            </div>
        </div>
    </div>
</div>
