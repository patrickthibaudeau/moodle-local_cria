<div class="card">
    <h3 class="card-header">
        <div class="col">
            <h3 class="float-left">{{#str}}documents, local_cria{{/str}}</h3>
        </div>
        <div class="col">
            <a href="edit_content.php?intent_id={{id}}" class="btn btn-link btn-lg
            float-right"
            title="{{#str}}add, local_cria{{/str}}"
            >
            <i class="bi bi-plus-circle"></i>

            </a>
        </div>
    </h3>
    <div class="card-body">
        <table id="cria-documents-table" class="table table-striped">
            <thead>
            <tr>
                <th>{{#str}}name, local_cria{{/str}}</th>
                <th>{{#str}}actions, local_cria{{/str}}</th>
            </tr>
            </thead>
            <tbody>
            {{#documents}}
                <tr>
                    <td>{{name}}</td>
                    <td>
                        <a href="edit_content.php?id={{id}}&intent_id={{intent_id}}"
                        class="btn btn-link BTN-LG"
                        title="{{#str}}update, local_cria{{/str}}"
                        >
                        <i class="bi bi-pencil"></i>
                        </a>
                        <button class="btn btn-link btn-lg text-danger delete-content"
                                title="{{#str}}delete, local_cria{{/str}}"
                                data-id="{{id}}">
                            <i class="bi bi-x-circle"></i>
                        </button>
                    </td>
                </tr>
            {{/documents}}
            </tbody>
        </table>
    </div>
</div>