<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <a href="bot_config.php" class="btn btn-outline-primary">
                    {{#str}}bots, local_cria{{/str}}
                </a>
                <a href="edit_bot_role.php?botid={{bot_id}}" class="btn btn-outline-primary float-right">
                {{#str}}new_role, local_cria{{/str}}
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-2">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <table id="bot_logs" class="table table-striped table-responsive w-100">
                    <thead>
                    <tr>
                        <th>{{#str}}role, local_cria{{/str}}</th>
                        <th>{{#str}}shortname{{/str}}</th>
                        <th>{{#str}}description{{/str}}</th>
                        <th>{{#str}}actions, local_cria{{/str}}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#roles}}
                        <tr>
                            <td>{{{name}}}</td>
                            <td>{{{shortname}}}</td>
                            <td>{{{description}}}</td>
                            <td>
                                <button class="btn btn-outline-primary bt-sm btn-assign-users" data-roleid="{{id}}"
                                        data-botid="{{bot_id}}" data-rolename="{{name}}">
                                    {{#str}}assign_users, local_cria{{/str}}
                                </button>
                                {{^system_reserved}}
                                    <a href="edit_bot_role.php?id={{{id}}}&botid={{bot_id}}" class="btn
                                    btn-outline-primary bt-sm">
                                    {{#str}}edit, local_cria{{/str}}
                                    </a>
                                    <button class="btn btn-outline-danger bt-sm delete-bot-role" data-id="{{id}}">
                                        {{#str}}delete, local_cria{{/str}}
                                    </button>
                                {{/system_reserved}}
                            </td>
                        </tr>
                    {{/roles}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="assign-users-modal" aria-labelledby="assign-users-modal-lable"
     aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="eassign-users-modal-lable"><span id="cria-modal-title"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{> local_cria/assign_users}}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>